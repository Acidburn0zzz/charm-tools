import os
import sys
import argparse
from lib.mr import Mr


def usage(exit_code=0):
    sys.stderr.write('Usage: getall path_to_charms\n')
    sys.stderr.write('retrieves all charms from LaunchPad\n')
    sys.exit(exit_code)


def get_args():
    parser = argparse.ArgumentParser(
        description='Performs static analysis on charms')
    parser.add_argument('path_to_charms', nargs='?',
                        help='Path to where all charms should be downloaded')
    args = parser.parse_args()

    return args.path_to_charms if args.path_to_charms else None

if __name__ == "__main__":
    getall_path = get_args()
    if not getall_path:
        sys.stderr.write('Error: No value for path_to_charms provided\n\n')
        usage(1)

    if not os.path.exists(getall_path):
        os.makedirs(getall_path, 0o755)

    try:
        Mr.update()
    except:

